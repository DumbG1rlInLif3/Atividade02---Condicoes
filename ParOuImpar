import java.util.Scanner;

public class test2 {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        int numero = 0;

        System.out.println(" Digite número : ");
        numero = sc.nextInt();

        //% -> dividido por 0
        if (numero % 2 == 0) {
            System.out.println(" É par.");
        } else {
            System.out.println(" É ímpar.");
        }

    }

}
